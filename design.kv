<LoginScreen>:
    GridLayout:
        cols:1
        GridLayout:
            cols:1
            padding: 15,15
            spacing: 20,20
            Label:
                text: "Login Page"
                font_size: "20sp"
            TextInput:
                hint_text: "User name"
                id: username
            TextInput:
                hint_text: "Password"
                id: password
            RelativeLayout:
                Button:
                    text: "Login"
                    on_press: root.login_checker(root.ids.username.text, root.ids.password.text)
                    size_hint: 0.3, 0.5
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            Label:
                id: login_error
        GridLayout
            cols: 2
            size_hint: 0.2, 0.2
            padding: 10,10
            spacing: 10,0
            Button:
                text: "Forgot Password"
                on_press: root.forgot_password()
                background_color: 1, 1, 1, 0
                color: "#F54F2B"
                opacity: 1 if self.state == "normal" else 0.5
            Button:
                text: "Sign Up"
                on_press: root.sign_up()
                color: "#F54F2B"
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == "normal" else 0.5
<SignUpScreen>
    GridLayout:
        cols:1
        GridLayout:
            cols:1
            padding: 20, 20
            spacing: 20, 20
            Label:
                text: "Sign Up Page"
            TextInput:
                hint_text:"User Name"
                id: username
            TextInput:
                hint_text: "Password"
                id: password
            Button:
                text: "Sign Up"
                on_press: root.sign_up_submit(root.ids.username.text, root.ids.password.text)
<SignUpScreenSuccess>
    GridLayout:
        cols:1
        GridLayout:
            cols:1
            padding: 20, 20
            spacing: 20, 20
            Label:
                text: "Successfully Signed Up"
        GridLayout:
            cols:1
            padding: 20, 20
            spacing: 20, 20
            size_hint: 0.2, 0.2
            Button:
                text: "Sign In"
                on_press: root.sign_in()

<LoginScreenSuccess>
    GridLayout:
        cols:1
        padding: 30, 30
        spacing: 30, 30
        RelativeLayout:
            ImageButton:
                source: 'logout_hover.png' if self.hovered else "logout_nothover.png"
                on_press: root.login_screen()
                size_hint: 0.35, 0.35
                pos_hint: {"center_x": 0.93, "center_y": 0.8}
        Label:
            text: "How are you today ?"
        TextInput:
            id: logininput
            hint_text: "happy, sad, unloved ?"
        Button:
            text: "Check Input"
            on_press: root.login_input()
        ScrollView
            Label:
                id: readpara
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]

<RootWidget>:
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "sign_up_screen"
    SignUpScreenSuccess:
        name: "sign_up_success"
    LoginScreenSuccess:
        name: "login_success"